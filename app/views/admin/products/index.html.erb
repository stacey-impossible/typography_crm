<p id="notice"><%= notice %></p>

<h1>Товары и услуги</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to 'Показать', admin_product_path(product) %></td>
        <td><%= link_to 'Редактировать', edit_admin_product_path(product) %></td>
        <td><%= link_to 'Удалить', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

